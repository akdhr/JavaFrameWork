<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<properties resource="db.properties" /><!-- 可指定resource属性 resource指向*.properties文件，如果其中有属性跟property指定的属性同名，则覆盖 -->

	<typeAliases>
		<!--<typeAlias alias="user.xml" type="com/sunms/mappers/user.xml" /> typeAlias只能配置java类型 -->
		<!-- <typeAlias type="com.sunms.domain.User" alias="User" /> -->
		<package name="com.sunms.domain" /><!-- 批量设置类别名 -->
	</typeAliases>
	<environments default="development"><!-- work -->
		<environment id="development">
			<transactionManager type="JDBC" /><!-- 另外一个选项是MANAGED：让容器来管理事务的整个生命周期 -->
			<dataSource type="POOLED"><!-- type=”[UNPOOLED | POOLED:mybatis实现的简单的数据库连接池类型，它使得数据库连接可被复用|JNDI]” -->
				<property name="driver" value="${driver}" />
				<property name="url" value="${url}" />
				<property name="username" value="${username}" />
				<property name="password" value="${password}" />
			</dataSource>
		</environment>
	</environments>
	<mappers>
		<mapper resource="com/sunms/mappers/user.xml" />
		<!--<package name="com/sunms/mappers"/> 包扫描 需要spring的支持 -->
		<!-- 另外一种是通过注解的方式实现，编写接口文件，加上注解文件实现 -->
	</mappers>
</configuration>