<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<properties><!-- 可指定resource属性 resource指向*.properties文件，如果其中有属性跟property指定的属性同名，则覆盖 -->
		<property name="driver" value="com.mysql.jdbc.Driver" />
		<property name="url" value="jdbc:mysql://localhost:3306/javaframework" />
		<property name="username" value="root" />
		<property name="password" value="sjtu" />
	</properties>
	<typeAliases>
		<!--<typeAlias alias="user.xml" type="com/sunms/mappers/user.xml" /> typeAlias只能配置java类型 -->
		<!-- <typeAlias alias="User" type="com/sunms/domain/User"/> ???-->
	</typeAliases>
	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC" /><!-- 另外一个选项是MANAGED：让容器来管理事务的整个生命周期 -->
			<dataSource type="POOLED"><!-- type=”[UNPOOLED | POOLED:mybatis实现的简单的数据库连接池类型，它使得数据库连接可被复用|JNDI]” -->
				<property name="driver" value="${driver}" />
				<property name="url" value="${url}" />
				<property name="username" value="${username}" />
				<property name="password" value="${password}" />
			</dataSource>
		</environment>
	</environments>
	<mappers>
		<mapper resource="com/sunms/mappers/user.xml" />
	</mappers>
</configuration>